# CoinQuest AR Backend Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/coinquest

# Redis (for caching and real-time features)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=30d

# Meta Integration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# Stripe (for cash redemptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal (for cash redemptions)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Feature Flags
FEATURE_CASH_REDEMPTION=true
FEATURE_GIFT_CARDS=true
FEATURE_FRIENDS=false

# Admin
ADMIN_EMAILS=admin@coinquestar.com

# Logging
LOG_LEVEL=info
