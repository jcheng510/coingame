// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String?
  displayName     String
  metaAccountId   String?  @unique
  createdAt       DateTime @default(now())
  isVerified      Boolean  @default(false)
  authProvider    String?
  lastLoginAt     DateTime?
  resetToken      String?
  resetTokenExpiry DateTime?
  
  wallet          Wallet?
  transactions    Transaction[]
  redemptions     Redemption[]
  dailyStats      DailyStats[]
  
  @@map("users")
}

model Wallet {
  id                 String   @id @default(uuid())
  userId             String   @unique
  balance            Int      @default(0)
  lifetimeEarnings   Int      @default(0)
  lifetimeRedeemed   Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("wallets")
}

model Transaction {
  id         String   @id @default(uuid())
  userId     String
  amount     Int
  type       String
  location   String
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@map("transactions")
}

model RedemptionOption {
  id          String      @id @default(uuid())
  name        String
  description String?
  minCoins    Int
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  
  redemptions Redemption[]
  
  @@map("redemption_options")
}

model Redemption {
  id           String           @id @default(uuid())
  userId       String
  optionId     String
  coinAmount   Int
  dollarValue  Float
  status       RedemptionStatus @default(PENDING)
  createdAt    DateTime         @default(now())
  processedAt  DateTime?
  
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  option       RedemptionOption @relation(fields: [optionId], references: [id])
  
  @@index([userId, status])
  @@map("redemptions")
}

model DailyStats {
  userId           String
  date             String
  coinsCollected   Int      @default(0)
  transactionCount Int      @default(0)
  distanceWalked   Float    @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@id([userId, date])
  @@map("daily_stats")
}

enum RedemptionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}
